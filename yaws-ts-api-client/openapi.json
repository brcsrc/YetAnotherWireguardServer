            "type": "string"
          },
          "clientDns": {
            "pattern": "^((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])$",
            "type": "string"
          },
          "allowedIps": {
            "type": "string"
          },
          "networkName": {
            "type": "string"
          },
          "networkEndpoint": {
            "pattern": "^((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])$",
            "type": "string"
          },
          "clientTag": {
            "type": "string"
          }
        }
      },
      "Client": {
