{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["src"]
}